<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textColorBold">
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="textColor">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <style name="txtDocument">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="txtDocument2">
    </style>

    <style name="txtDocumentHead">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textViewStyle">@style/txtDocument</item>
        <!--<item name="editTextStyle">@style/txtDocument2</item>-->
        <item name="colorPrimaryDark">@color/colorRojoApp</item>
        <item name="colorPrimary">@color/colorRojoApp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
